<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dev.marshall.hoteladvisor.HotelInfo_Fragment">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedscrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:id="@+id/cardview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/hotel_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:padding="15dp"
                        android:text="Name of the hotel"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <View style="@style/Divider" />

                    <TextView
                        android:id="@+id/real_location"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="9"
                        android:padding="15dp"
                        android:text="Real Location"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="normal" />

                    <View style="@style/Divider" />

                    <TextView
                        android:id="@+id/star_class"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="15dp"
                        android:drawableStart="@drawable/ic_star_black_24dp"
                        android:gravity="center_vertical"
                        android:padding="15dp"
                        android:text="1 star hotel"
                        android:textColor="@android:color/black"
                        android:tint="@color/colorPrimaryDark" />

                    <View style="@style/Divider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <dev.marshall.hoteladvisor.CircleDisplay
                                android:id="@+id/circleDisplay"
                                android:layout_width="100dp"
                                android:layout_height="100dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/Remark"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:paddingStart="15dp"
                                    android:text="Excelent"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="24sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:id="@+id/avrating"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:paddingStart="15dp"
                                    android:text="4/5"
                                    android:textColor="@android:color/black"
                                    android:textSize="18sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:id="@+id/no_reviewers"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="15dp"
                                    android:layout_marginTop="8dp"
                                    android:paddingStart="15dp"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="18sp"
                                    android:textStyle="normal" />

                                <View style="@style/Divider" />
                            </LinearLayout>

                        </LinearLayout>

                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:columnCount="3"
                            android:padding="15dp">

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Security"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />

                            <ProgressBar
                                android:id="@+id/sec"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="200dp"
                                android:layout_height="5dp"
                                android:layout_gravity="center_vertical"
                                app:layout_constraintStart_toEndOf="@+id/textView2"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/valuesec"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="1/5"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                app:layout_constraintStart_toEndOf="@+id/sec"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="Accessibility"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />

                            <ProgressBar
                                android:id="@+id/access"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="200dp"
                                android:layout_height="5dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="15dp"
                                android:max="100" />

                            <TextView
                                android:id="@+id/valaccess"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="1/5"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="Staff"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />

                            <ProgressBar
                                android:id="@+id/staf"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="200dp"
                                android:layout_height="5dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="15dp"
                                android:max="100" />

                            <TextView
                                android:id="@+id/valstaff"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="1/5"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="Amenities"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />

                            <ProgressBar
                                android:id="@+id/amen"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="200dp"
                                android:layout_height="5dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="15dp"
                                android:max="100" />

                            <TextView
                                android:id="@+id/valamen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="1/5"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="Cleanliness"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />

                            <ProgressBar
                                android:id="@+id/clean"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="200dp"
                                android:layout_height="5dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="15dp"
                                android:max="100" />

                            <TextView
                                android:id="@+id/valclean"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="1/5"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="Comfort"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />

                            <ProgressBar
                                android:id="@+id/comf"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="200dp"
                                android:layout_height="5dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="15dp"
                                android:max="100" />

                            <TextView
                                android:id="@+id/valcomf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="1/5"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="Value for money"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />

                            <ProgressBar
                                android:id="@+id/val"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="200dp"
                                android:layout_height="5dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="15dp"
                                android:max="100" />

                            <TextView
                                android:id="@+id/valmoney"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="1/5"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />

                        </GridLayout>
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardview1" />

            <android.support.v7.widget.CardView
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:id="@+id/cardview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view1"
               >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:text="Hotel Details"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View style="@style/Divider" />

                    <TextView
                        android:id="@+id/hotel_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:lineSpacingMultiplier="1.5"
                        android:padding="12dp"
                        android:text="Description"
                        android:textAlignment="inherit"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardview2"/>

            <android.support.v7.widget.CardView
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:id="@+id/cardView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view2"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="15dp"
                            android:text="Amenities"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View style="@style/Divider" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2">

                        <TextView
                            android:id="@+id/pa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="50dp"
                            android:drawablePadding="12dp"
                            android:drawableStart="@drawable/ic_local_parking_black_24dp"
                            android:lineSpacingMultiplier="1.5"
                            android:padding="12dp"
                            android:text="Parking"
                            android:textAlignment="inherit"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/fo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="12dp"
                            android:drawableStart="@drawable/ic_local_cafe_black_24dp"
                            android:lineSpacingMultiplier="1.5"
                            android:padding="12dp"
                            android:text="Food and Drink "
                            android:textAlignment="inherit"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/po"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="50dp"
                            android:layout_marginTop="15dp"
                            android:drawablePadding="12dp"
                            android:drawableStart="@drawable/ic_pool_black_24dp"
                            android:lineSpacingMultiplier="1.5"
                            android:padding="12dp"
                            android:text="Outdoor"
                            android:textAlignment="inherit"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/la"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:drawablePadding="12dp"
                            android:drawableStart="@drawable/ic_local_laundry_service_black_24dp"
                            android:lineSpacingMultiplier="1.5"
                            android:padding="12dp"
                            android:text="Services"
                            android:textAlignment="inherit"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/se"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="50dp"
                            android:layout_marginTop="15dp"
                            android:drawablePadding="12dp"
                            android:drawableStart="@drawable/ic_security_black_24dp"
                            android:lineSpacingMultiplier="1.5"
                            android:padding="12dp"
                            android:text="Security"
                            android:textAlignment="inherit"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/in"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:drawablePadding="12dp"
                            android:drawableStart="@drawable/ic_wifi_black_24dp"
                            android:lineSpacingMultiplier="1.5"
                            android:padding="12dp"
                            android:text="Internet"
                            android:textAlignment="inherit"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtair"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:drawableStart="@drawable/ic_airconditioning"
                            android:padding="12dp"
                            android:text="Air Conditioning"
                            android:textAlignment="inherit"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtbar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:drawableStart="@drawable/ic_local_bar_black_24dp"
                            android:padding="12dp"
                            android:text="Bar/Lounge"
                            android:textAlignment="inherit"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtrservice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:drawableStart="@drawable/ic_room_service_black_24dp"
                            android:padding="12dp"
                            android:text="Room Servicee"
                            android:textAlignment="inherit"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtgym"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:drawableStart="@drawable/ic_fitness_center_black_24dp"
                            android:padding="12dp"
                            android:text="Gym"
                            android:textAlignment="inherit"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtgolf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:drawableStart="@drawable/ic_golf_course_black_24dp"
                            android:padding="12dp"
                            android:text="Golf course"
                            android:textAlignment="inherit"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtsap"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:drawableStart="@drawable/ic_spa_black_24dp"
                            android:padding="12dp"
                            android:text="spa"
                            android:textAlignment="inherit"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtbeach"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:drawableStart="@drawable/ic_beach_access_black_24dp"
                            android:padding="12dp"
                            android:text="Beach Access"
                            android:textAlignment="inherit"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textshuttle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:drawableStart="@drawable/ic_airport_shuttle_black_24dp"
                            android:padding="12dp"
                            android:text="Airport Shuttle"
                            android:textAlignment="inherit"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtcasino"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:drawableStart="@drawable/ic_casino_black_24dp"
                            android:padding="12dp"
                            android:text="Casino"
                            android:textAlignment="inherit"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtchild"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:drawableStart="@drawable/ic_child_friendly_black_24dp"
                            android:padding="12dp"
                            android:text="Child Friendly"
                            android:textAlignment="inherit"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </GridLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView3"/>

            <android.support.v7.widget.CardView
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view3"
                android:id="@+id/cardView4"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="5dp">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/texthp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:paddingStart="15dp"
                        android:text="Hotel Polices"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/texthp"
                        android:id="@+id/viewp"
                        style="@style/Divider" />

                        <TextView
                            android:id="@+id/textcheckin"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/viewp"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="Check_In:"
                            android:paddingStart="15dp"
                            android:layout_marginTop="15dp"
                            android:lineSpacingMultiplier="1.5"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                        <TextView
                            app:layout_constraintStart_toEndOf="@+id/textcheckin"
                            app:layout_constraintTop_toBottomOf="@+id/viewp"
                            android:id="@+id/chkin"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:lineSpacingMultiplier="1.5"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textcheckout"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textcheckin"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:paddingStart="15dp"
                            android:text="Check_Out:"
                            android:layout_marginTop="15dp"
                            android:lineSpacingMultiplier="1.5"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                    <TextView
                        android:id="@+id/chkout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:lineSpacingMultiplier="1.5"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@+id/textcheckout"
                        app:layout_constraintTop_toBottomOf="@+id/textcheckin" />

                        <TextView
                            android:id="@+id/txtextras"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textcheckout"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="Extras:"
                            android:paddingStart="15dp"
                            android:layout_marginTop="15dp"
                            android:lineSpacingMultiplier="1.5"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                        <TextView
                            app:layout_constraintStart_toEndOf="@+id/txtextras"
                            app:layout_constraintTop_toBottomOf="@+id/textcheckout"
                            android:id="@+id/Extras"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:gravity="center"
                            android:lineSpacingMultiplier="1.5"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <View
                android:id="@+id/view4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView4"
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <android.support.v7.widget.CardView
                android:id="@+id/cardview5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                app:cardBackgroundColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view4"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:text="More Informations"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                    <View

                        style="@style/Divider" />

                    <iammert.com.expandablelib.ExpandableLayout
                        android:id="@+id/expandablelayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:childLayout="@layout/layout_child"
                        app:parentLayout="@layout/layout_parent" />
                </LinearLayout>


            </android.support.v7.widget.CardView>

            <View
                android:id="@+id/view5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardview5"
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <android.support.v7.widget.CardView
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:cardBackgroundColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view5"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="15dp"
                        android:text="Location Map"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <fragment
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>


            </android.support.v7.widget.CardView>




        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>


